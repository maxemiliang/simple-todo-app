                <input type="submit" class="btn-sm addTodo btn-primary" value="Add">
            </form>
            <hr>
            <h1>Todos</h1>
            <ul class="list-group todos">
                <li class="list-group-item line-wrap">Loading...</li>
            </ul>

        </div>
    </div>